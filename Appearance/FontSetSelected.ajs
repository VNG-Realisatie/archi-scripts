/**
 * FontSetSelected
 *  Set the font to given fixed type and size
 * 	for all selected concepts
 *
 */
 load(__DIR__ + "../_lib/SelectCollection.js");

 let collection = selectVisualObjects($(selection));
 applyToCollection(collection, fontSet, ["Arial", 12]);
 
function fontSet(obj, args) {
	obj.fontName = args[0];
	obj.fontSize = args[1];
}