load(__DIR__ + "../Common/includeCommon.ajs");
load(__DIR__ + "IncludeApplyToSelection.ajs");

initConsoleLog(__FILE__)

applyToSelection($(selection), ResetFont);

finishConsoleLog()

/*
 * ResetFont
 * 
 * Reset font for object
 * 
 */
function ResetFont(pObject) {

	console.log(`>>> ${pObject} on view ${pObject.view.name}`);

	if (pObject.fontName != null) {pObject.fontName = "Segoe UI"}; 
	if (pObject.fontStyle != null) {pObject.fontStyle = null};
	if (pObject.fontColor != null) {pObject.fontColor = null};
	if (pObject.fontSize != null) {pObject.fontSize = 9};
}	