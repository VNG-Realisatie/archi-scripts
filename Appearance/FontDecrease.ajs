/*
 * FontDecrease
 *
 * Decrease fontsize by 2, but don't set fontsize smaller than default 9
 *
 * (c) 2019 Mark Backer
 *
 */
load(__DIR__ + "../_lib/SelectCollection.js");

let collection = selectVisualObjects($(selection));
applyToCollection(collection, fontDecrease);

function fontDecrease(obj) {
	console.log(`>>> ${obj} on view ${obj.view.name}`);

	if (obj.fontSize > 9) {
		if (obj.fontSize == 10) {
			obj.fontSize = 9;
		} else {
			obj.fontSize = obj.fontSize - 2;
		}
	}
}
