/**
 * The default font on Linux is no longer "Arial 9" but is now "Sans 9". This ensures proper rendering of fonts in SVG export.
 *    SVG export met Arial heeft foute uitlijning 
 * 
 */
load(__DIR__ + "../Common/includeCommon.ajs");
load(__DIR__ + "IncludeApplyToSelection.ajs");

initConsoleLog(__FILE__)

applyToSelection($(selection), ChangeFont);

finishConsoleLog()

/********************************************
 * function definitions
 *******************************************/
function ChangeFont(pObject)
{
    pObject.fontName = "Arial";
    pObject.fontSize = 12;
}
